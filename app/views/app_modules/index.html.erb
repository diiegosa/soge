<p id="notice"><%= notice %></p>

<h1>App Modules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Controller</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_modules.each do |app_module| %>
      <tr>
        <td><%= app_module.name %></td>
        <td><%= app_module.controller %></td>
        <td><%= app_module.actions %></td>
        <td><%= link_to 'Show', app_module %></td>
        <td><%= link_to 'Edit', edit_app_module_path(app_module) %></td>
        <td><%= link_to 'Destroy', app_module, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App Module', new_app_module_path %>
