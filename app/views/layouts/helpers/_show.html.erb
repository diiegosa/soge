<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= translate_module(model, :one) %>
      <small><%= translate_action(:show) %></small>
    </h3>
  </div>
  <div class="box-body">
    <form class="form-horizontal">
      <% fields.each do |field| %>
        <div class="form-group">
          <label class="col-sm-2 control-label"><%= translate_attr(field[:name], model) %></label>
          <div class="col-sm-10">
            <p class="form-control-static"><%= field[:value] %></p>
          </div>
        </div>
      <% end %>
    </form>
  </div>
  <div class="box-footer">
    <%= link_to translate_action(:back), model_path, class: "btn btn-default" %>
    <%= link_to translate_action(:edit), edit_model_path, class: "btn btn-info pull-right" %>
  </div><!-- /.box-footer -->
</div>
