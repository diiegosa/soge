<% if(search_match.present?) %>
  <%= search_form_for @q do |f| %>
    <div class="input-group input-group-sm " style="margin-top: 0px; width: 250px">
        <%= f.search_field search_match, class: "form-control float-right" %>
        
        <div class="input-group-append">
          <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
        </div>
    </div>
  <% end %>
<% end %>